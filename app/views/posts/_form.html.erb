<%=form_for @post do |f|%>
    <%=f.label :name %>
    <%=f.text_field :name %><br/>

    <%=f.label :description %> 
    <%=f.text_area :description %><br/>

    <%= f.label :community %>
    <%= f.collection_select :community_id, @communities.sort_by(&:name), :id, :name%><br>
    <%= f.hidden_field :user_id, :value => session[:user_id]%>

    <%=f.submit%>
<%end%>