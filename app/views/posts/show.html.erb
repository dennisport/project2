<%=link_to @post.user.username, user_path(@post.user)%><br>
<h3><%= @post.name %><br></h3>
<%= @post.description %><br>

<h3>Comment Section</h3>
<%= form_for [@post, Comment.new] do |f| %>
  <%= f.text_area :content, placeholder: "Add a comment" %><br/>
  <%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render @post.comments %>
</ul>



<% if @post.user_id == session[:user_id] %>

    <%= form_for @post, method: :delete do |f| %>
    <%= f.submit "Delete Post" %>
    <% end %>

<%end %>

<%= link_to "Back", "javascript:history.go(-1);", :class=> "btn btn-outline-success"  %>

